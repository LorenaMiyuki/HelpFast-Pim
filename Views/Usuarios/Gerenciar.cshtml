@model List<HelpFast_Pim.Models.Usuario>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Gerenciar UsuÃ¡rios";
}

<style>
    body {
        background: #161D28;
        color: #fff;
        font-family: "Segoe UI", Roboto, Arial, sans-serif;
    }

    .admin-page {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 40px 20px;
        background: transparent;
        flex-direction: column;
    }

    .admin-logo {
        height: 180px;
        width: auto;
        margin-bottom: 30px;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }

    .admin-card {
        background: transparent;
        border-radius: 18px;
        padding: 0;
        width: 100%;
        max-width: 700px;
        color: #fff;
        box-shadow: none;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .admin-header {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 15px;
        margin-bottom: 0;
    }

    .admin-title {
        display: block;
    }

    .users-container {
        background: #1a2634;
        border-radius: 20px;
        padding: 0;
        margin-bottom: 40px;
        border: none;
        width: 100%;
        box-sizing: border-box;
    }

    .container-title {
        background: transparent;
        border-radius: 20px 20px 0 0;
        padding: 30px 40px;
        text-align: center;
        border: none;
        color: #fff;
        font-size: 28px;
        font-weight: 700;
        margin-bottom: 0;
    }

    .list-container {
        background: transparent;
        border-radius: 0 0 20px 20px;
        padding: 40px;
    }

    .list-header {
        display: grid;
        grid-template-columns: 2fr 2fr 1fr;
        gap: 30px;
        padding: 0 10px 20px 10px;
        color: #aaa;
        font-weight: 600;
        font-size: 14px;
        margin-bottom: 20px;
        border-bottom: 1px solid #ffffff33;
    }

    .list-item {
        display: grid;
        grid-template-columns: 2fr 2fr 1fr;
        gap: 30px;
        align-items: center;
        background: #e9eef2;
        color: #111;
        padding: 16px 16px;
        border-radius: 10px;
        margin-bottom: 16px;
        font-weight: 500;
        font-size: 14px;
    }

    .list-item:last-child {
        margin-bottom: 0;
    }

    .user-name {
        font-weight: 600;
        color: #111;
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
        width: fit-content;
        background: transparent;
        color: #111;
        border: none;
    }

    .badge-tÃ©cnico {
        background: transparent;
        color: #111;
    }

    .badge-cliente {
        background: transparent;
        color: #111;
    }

    .badge-administrador {
        background: transparent;
        color: #111;
    }

    .actions {
        display: flex;
        gap: 10px;
        justify-content: center;
        align-items: center;
    }

    .btn-action {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;
        border-radius: 6px;
        border: 0;
        cursor: pointer;
        font-size: 16px;
        transition: all 0.3s ease;
        padding: 0;
        background: transparent;
        color: #666;
    }

    .btn-action:hover {
        background: #e0e4eb;
        color: #333;
    }

    .btn-action[type="submit"] {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;
        border-radius: 6px;
        border: 0;
        cursor: pointer;
        font-size: 16px;
        transition: all 0.3s ease;
        padding: 0;
        background: transparent;
        color: #666;
    }

    .btn-action[type="submit"]:hover {
        background: #e0e4eb;
        color: #333;
    }

    .buttons-container {
        display: flex;
        gap: 16px;
        justify-content: center;
        width: 100%;
        margin-top: 30px;
    }

    .btn-primary, .btn-secondary {
        padding: 12px 40px;
        border-radius: 8px;
        border: 0;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .btn-primary {
        background: #ffffff;
        color: #111;
    }

    .btn-primary:hover {
        background: #f1f3f5;
    }

    .btn-secondary {
        background: #ffffff;
        color: #111;
        border: 0;
    }

    .btn-secondary:hover {
        background: #f1f3f5;
    }

    .alert {
        padding: 12px 16px;
        border-radius: 8px;
        margin-bottom: 20px;
        font-weight: 500;
        width: 100%;
        box-sizing: border-box;
    }

    .alert-success {
        background: #d3f9d8;
        color: #2b8a3e;
        border-left: 4px solid #2b8a3e;
    }

    .alert-danger {
        background: #e8d5f0;
        color: #5d3d7a;
        border-left: 4px solid #5d3d7a;
    }

    .empty-state {
        text-align: center;
        padding: 40px;
        color: #999;
    }

    .empty-state-icon {
        font-size: 48px;
        margin-bottom: 16px;
    }

    @@media (max-width: 760px) {
        .admin-card {
            padding: 20px;
        }

        .users-container {
            padding: 20px;
        }

        .list-header, .list-item {
            grid-template-columns: 1fr;
            gap: 8px;
        }

        .buttons-container {
            flex-direction: column;
        }

        .btn-primary, .btn-secondary {
            width: 100%;
        }
    }
</style>

<div class="admin-page">
    <img class="admin-logo" src="/images/logoh.png" alt="HelpFast" />
    
    <div class="admin-card">
        @if (TempData["Sucesso"] != null)
        {
            <div class="alert alert-success">
                âœ“ @TempData["Sucesso"]
            </div>
        }

        @if (TempData["Erro"] != null)
        {
            <div class="alert alert-danger">
                âš  @TempData["Erro"]
            </div>
        }

        <div class="users-container">
            <div class="container-title">Clientes e TÃ©cnicos</div>
            <div class="list-container">
                @if (Model == null || Model.Count == 0)
                {
                    <div class="empty-state">
                        <div class="empty-state-icon">ðŸ‘¥</div>
                        <p>Nenhum usuÃ¡rio cadastrado ainda.</p>
                    </div>
                }
                else
                {
                    <div class="list-header">
                        <div>Nome</div>
                        <div>Usuario</div>
                        <div>AÃ§Ãµes</div>
                    </div>

                    @foreach (var usuario in Model)
                    {
                        <div class="list-item">
                            <div class="user-name">@usuario.Nome</div>
                            <div class="user-info">
