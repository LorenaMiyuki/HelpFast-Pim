@model HelpFast_Pim.Models.Chamado
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Chamado Finalizado";
}

<style>
    body {
        background: #161D28;
        color: #fff;
        font-family: "Segoe UI", Roboto, Arial, sans-serif;
    }

    .page-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 40px 20px;
        background: transparent;
    }

    .status-card {
        background: transparent;
        border-radius: 18px;
        padding: 0;
        width: 100%;
        max-width: 600px;
        color: #fff;
        box-shadow: none;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .status-header {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 15px;
        margin-bottom: 40px;
    }

    .status-header .logo {
        height: 90px;
        width: auto;
    }

    .status-content {
        background: #2a3a4a;
        border-radius: 20px;
        padding: 40px;
        text-align: center;
        width: 100%;
        box-sizing: border-box;
        margin-bottom: 30px;
    }

    .status-title {
        font-size: 28px;
        font-weight: 700;
        color: #fff;
        margin: 0 0 20px 0;
    }

    .chamado-id {
        font-size: 20px;
        font-weight: 600;
        color: #e9eef2;
        margin-bottom: 30px;
    }

    .status-message {
        background: #e9eef2;
        color: #111;
        padding: 20px;
        border-radius: 12px;
        font-size: 16px;
        line-height: 1.6;
        margin-bottom: 20px;
    }

    .buttons-container {
    display: flex;
    gap: 16px;
    justify-content: center;
    width: 100%;
    }

    .btn {
        padding: 8px 22px; /* menor */
        border-radius: 8px;
        border: 0;
        font-size: 14px; /* menor */
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .btn-primary {
        background: #ffffff;
        color: #111;
    }

    /* metade da largura, centralizado */
    .btn-half { width:50%; text-align:center; display:block; }

    .btn-primary:hover {
        background: #f1f3f5;
    }

    @@media (max-width: 600px) {
        .status-content {
            padding: 24px;
        }

    .buttons-container { flex-direction: column; }
    .btn { width: 100%; }
    .btn-half { width:100%; }
    }
</style>

<div class="page-container">
    <div class="status-card">
        <div class="status-header">
            <img class="logo" src="/images/logoh.png" alt="HelpFast" />
        </div>

        <div class="status-content">
            <h1 class="status-title">Chamado ID: #@Model.Id</h1>
            
            <div class="status-message">
                <p>Chamado finalizado!</p>
                <p>Obrigado pela preferÃªncia.</p>
                <p>Caso precise de suporte, abra um novo chamado!</p>
            </div>
        </div>

        <div class="buttons-container">
            <a href="@Url.Action("MeusChamados", "Chamados")" class="btn btn-primary btn-half">Voltar ao menu anterior</a>
        </div>
    </div>
</div>
