@model List<HelpFast_Pim.Models.Chamado>
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
	/* Container geral alinhado ao centro semelhante ao protótipo */
	html,
	body {
		background: #0f1b23 !important;
		color: #fff;
		font-family: "Segoe UI", Roboto, Arial, sans-serif;
		margin: 0 !important;
		padding: 0 !important;
	}

	.page-wrap {
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		min-height: 100vh;
		width: 100%;
		padding: 20px;
		box-sizing: border-box;
		background: #0f1b23 !important;
	}

	.logo-top {
		display: block;
		height: 86px;
		width: auto;
		margin: 0 auto 14px;
	}

	.card {
		width: 640px;
		max-width: 92vw;
		background: #1C2937;
		border-radius: 14px;
		padding: 28px 26px 32px;
		box-shadow: 0 6px 18px rgba(3, 6, 10, 0.45);
		margin: 0 20px;
		box-sizing: border-box;
	}

	.header {
		text-align: center;
		margin-bottom: 18px;
	}

	h1.title {
		font-size: 34px;
		font-weight: 600;
		margin: 6px 0 22px;
		color: #e7f0f4;
		letter-spacing: 0.6px;
	}

	.table-head {
		display: grid;
		grid-template-columns: 100px 1fr 128px;
		gap: 10px;
		color: #c8d6db;
		font-weight: 600;
		padding: 6px 6px 6px 6px;
		align-items: center;
	}

	.list {
		margin-top: 8px;
		display: flex;
		flex-direction: column;
		gap: 8px;
		min-height: 60px;
		/* reduz espaço em branco */
	}

	.row {
		display: grid;
		grid-template-columns: 100px 1fr 128px;
		gap: 10px;
		align-items: center;
		background: #e7eaec;
		color: #0d2229;
		padding: 6px 10px;
		border-radius: 999px;
		/* pílula */
		box-shadow: inset 0 -1px 0 rgba(0, 0, 0, 0.05);
		height: 40px;
	}

	.id-pill {
		display: inline-flex;
		align-items: center;
		justify-content: flex-start;
		background: transparent;
		font-weight: 700;
		border-radius: 12px;
		padding: 0 8px;
	}

	.subject {
		padding-left: 6px;
		font-size: 15px;
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
	}

	.actions {
		display: flex;
		justify-content: flex-end;
		align-items: center;
		height: 100%;
		padding-right: 2px;
	}

	.action-group {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: 12px;
		transform: translateY(-15px);
	}

	.action-group form {
		margin: 0;
		display: inline-flex;
		align-items: center;
	}

	.action-btn {
		background: transparent;
		border: none;
		cursor: pointer;
		padding: 0;
		width: 20px;
		height: 20px;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		line-height: 0;
		color: #0d2229;
	}

	.action-btn:hover {
		filter: brightness(0.95);
	}

	.eye {
		width: 20px;
		height: 20px;
	}

	.footer {
		display: flex;
		justify-content: center;
		margin-top: 22px;
	}

	.back-btn {
		background: #ffffff;
		color: #0d2229;
		padding: 10px 26px;
		border-radius: 10px;
		border: none;
		font-weight: 600;
		cursor: pointer;
		box-shadow: 0 6px 0 rgba(4, 7, 10, 0.18);
	}

	.back-btn:hover {
		transform: translateY(-1px);
	}

	@@media (max-width:520px) {

		.table-head,
		.row {
			grid-template-columns: 70px 1fr 92px;
		}

		.card {
			padding: 20px;
		}

		h1.title {
			font-size: 28px;
		}

		.action-group {
			gap: 8px;
			transform: translateY(-4px);
		}

		.eye {
			width: 18px;
			height: 18px;
		}

		.row {
			height: 36px;
			padding: 6px 10px;
		}
	}
</style>

<div class="page-wrap">
	<div class="card" role="main">
		<img class="logo-top" src="/images/logoh.png" alt="HelpFast" />
		<div class="header">
			<h1 class="title">Chamados</h1>
		</div>

		<div class="table-head" aria-hidden="true">
			<div>ID:</div>
			<div>Assunto:</div>
			<div style="text-align:right">Ações</div>
		</div>

		<div class="list" role="list">
			@foreach (var item in Model ?? Enumerable.Empty<HelpFast_Pim.Models.Chamado>())
			{
				<div class="row" role="listitem" aria-label="Chamado @item.Id">
					<div class="id-pill">#@item.Id</div>
					<div class="subject" title="@item.Motivo">@item.Motivo</div>
					<div class="actions">
						<div class="action-group">
							@if (item.Status != "Finalizado" && item.Status != "Cancelado")
							{
								<form method="POST" action="/Chamados/CancelarChamadoTecnico/@item.Id"
									onsubmit="return confirm('Tem certeza que deseja cancelar este chamado?');">
									<button type="submit" class="action-btn" title="Cancelar" aria-label="Cancelar chamado">
										<svg class="eye" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"
											aria-hidden="true">
											<line x1="5" y1="5" x2="19" y2="19" stroke="#0d2229" stroke-width="2"
												stroke-linecap="round" />
											<line x1="19" y1="5" x2="5" y2="19" stroke="#0d2229" stroke-width="2"
												stroke-linecap="round" />
										</svg>
									</button>
								</form>
								<form method="POST" action="/Chamados/ConcluirChamadoTecnico/@item.Id"
									onsubmit="return confirm('Tem certeza que deseja concluir este chamado?');">
									<button type="submit" class="action-btn" title="Concluir" aria-label="Concluir chamado">
										<svg class="eye" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"
											aria-hidden="true">
											<polyline points="5 13 10 18 19 7" stroke="#0d2229" stroke-width="2"
												stroke-linecap="round" stroke-linejoin="round" />
										</svg>
									</button>
								</form>
							}
							<a href="/Chamados/VisualizarChamadoTecnico/@item.Id" class="action-btn" title="Visualizar"
								aria-label="Visualizar chamado">
								<svg class="eye" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"
									aria-hidden="true">
									<path d="M1 12s4-7 11-7 11 7 11 7-4 7-11 7S1 12 1 12z" stroke="#0d2229"
										stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round" />
									<circle cx="12" cy="12" r="3" stroke="#0d2229" stroke-width="1.6" stroke-linecap="round"
										stroke-linejoin="round" />
								</svg>
							</a>
						</div>
					</div>
				</div>
			}
			@if (Model == null || !Model.Any())
			{
				<div style="color:#9fb0b6; padding:18px 6px; text-align:center;">Nenhum chamado encontrado.</div>
			}
		</div>

		<div class="footer">
			<a href="/Home/Index">
				<button class="back-btn" type="button">Voltar ao menu</button>
			</a>
		</div>
	</div>
</div>

<script>
	// Auto-refresh a página a cada 30 segundos
	setInterval(function () {
		location.reload();
	}, 30000);
</script>