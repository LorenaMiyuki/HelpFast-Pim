@model List<HelpFast_Pim.Models.Chamado>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
	/* Container geral alinhado ao centro semelhante ao protótipo */
	html, body { 
		background:#0f1b23 !important; 
		color:#fff; 
		font-family: "Segoe UI", Roboto, Arial, sans-serif;
		margin: 0 !important;
		padding: 0 !important;
	}
	.page-wrap { 
		display:flex; 
		justify-content:center; 
		align-items:center; 
		flex-direction:column; 
		min-height:100vh;
		width: 100%;
		padding: 20px;
		box-sizing: border-box;
		background:#0f1b23 !important;
	}
	.logo-top {
		display:none;
	}
	.card {
		width:640px;
		max-width:92vw;
		background: #1C2937;
		border-radius: 14px;
		padding:34px 36px 42px;
		box-shadow: 0 6px 18px rgba(3,6,10,0.45);
		margin: 0 20px;
		box-sizing: border-box;
	}
	.header {
		text-align:center;
		margin-bottom: 18px;
	}
	h1.title {
		font-size:34px;
		font-weight:600;
		margin:6px 0 22px;
		color:#e7f0f4;
		letter-spacing:0.6px;
	}
	.table-head {
		display:grid;
		grid-template-columns: 120px 1fr 78px;
		gap:12px;
		color:#c8d6db;
		font-weight:600;
		padding:8px 8px 6px 8px;
		align-items:center;
	}
	.list {
		margin-top:10px;
		display:flex;
		flex-direction:column;
		gap:10px;
		min-height:60px; /* reduz espaço em branco */
	}
	.row {
		display:grid;
		grid-template-columns: 120px 1fr 78px;
		gap:12px;
		align-items:center;
		background: #e7eaec;
		color:#0d2229;
		padding:8px 10px;
		border-radius:12px;
		box-shadow: inset 0 -2px 0 rgba(0,0,0,0.04);
	}
	.id-pill {
		display:inline-flex;
		align-items:center;
		justify-content:center;
		background:transparent;
		font-weight:700;
		border-radius:12px;
		padding:6px 10px;
	}
	.subject {
		padding-left:6px;
		font-size:16px;
		white-space:nowrap;
		overflow:hidden;
		text-overflow:ellipsis;
	}
	.actions {
		display:flex;
		justify-content:flex-end;
		gap:8px;
	}
	.view-btn {
		background:transparent;
		border:none;
		cursor:pointer;
		padding:8px;
		border-radius:12px;
		display:inline-flex;
		align-items:center;
		justify-content:center;
		color:#0d2229;
	}
	.view-btn:hover { filter: brightness(0.95); transform: translateY(-1px); }
	.eye {
		width:22px;
		height:22px;
	}
	.footer {
		display:flex;
		justify-content:center;
		margin-top:26px;
	}
	.back-btn {
		background:#ffffff;
		color:#0d2229;
		padding:10px 26px;
		border-radius:10px;
		border:none;
		font-weight:600;
		cursor:pointer;
		box-shadow: 0 6px 0 rgba(4,7,10,0.18);
	}
	.back-btn:hover { transform: translateY(-1px); }
	@@media (max-width:520px){
		.table-head, .row { grid-template-columns: 80px 1fr 60px; }
		.card { padding:22px; }
		h1.title { font-size:28px; }
	}
</style>

<div class="page-wrap">
	<div class="card" role="main">
		<div class="header">
			<img src="/images/logoh.png" alt="HelpFast" style="height:100px; width:auto; display:block; margin:0 auto 12px;" />
			<h1 class="title">Meus Chamados</h1>
		</div>

		<div class="table-head" aria-hidden="true">
			<div>ID:</div>
			<div>Assunto:</div>
			<div style="text-align:right">Ações</div>
		</div>

		<div class="list" role="list">
			@foreach(var item in Model ?? Enumerable.Empty<HelpFast_Pim.Models.Chamado>())
			{
				<div class="row" role="listitem" aria-label="Chamado @item.Id">
					<div class="id-pill">#@item.Id</div>
					<div class="subject" title="@item.Motivo">@item.Motivo</div>
					<div class="actions">
						<a href="/Chamados/VisualizarChamadoTecnico/@item.Id" class="view-btn" title="Visualizar">
							<svg class="eye" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
								<path d="M1 12s4-7 11-7 11 7 11 7-4 7-11 7S1 12 1 12z" stroke="#0d2229" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
								<circle cx="12" cy="12" r="3" stroke="#0d2229" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
						</a>
						@if (item.Status != "Finalizado" && item.Status != "Cancelado")
						{
							<form method="POST" action="/Chamados/CancelarChamadoTecnico/@item.Id" style="display: inline;" onsubmit="return confirm('Tem certeza que deseja cancelar este chamado?');">
								<button type="submit" class="view-btn" title="Cancelar">
									<svg class="eye" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
										<polyline points="3 6 5 6 21 6" stroke="#0d2229" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
										<path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" stroke="#0d2229" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
										<line x1="10" y1="11" x2="10" y2="17" stroke="#0d2229" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
										<line x1="14" y1="11" x2="14" y2="17" stroke="#0d2229" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
									</svg>
								</button>
							</form>

							<form method="POST" action="/Chamados/ConcluirChamadoTecnico/@item.Id" style="display: inline;" onsubmit="return confirm('Tem certeza que deseja concluir este chamado?');">
								<button type="submit" class="view-btn" title="Concluir">
									<svg class="eye" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
										<polyline points="20 6 9 17 4 12" stroke="#0d2229" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
									</svg>
								</button>
							</form>
						}
					</div>
				</div>
			}
			@if (Model == null || !Model.Any())
			{
				<div style="color:#9fb0b6; padding:18px 6px; text-align:center;">Nenhum chamado encontrado.</div>
			}
		</div>

		<div class="footer">
			<a href="/Home/Index">
				<button class="back-btn" type="button">Voltar ao menu</button>
			</a>
		</div>
	</div>
</div>
