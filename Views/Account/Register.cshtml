@model global::HelpFast_Pim.Models.Usuario
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Cadastrar";
}

<style>
    html, body { 
        height:100%; margin:0; font-family: "Inter", "Segoe UI", Roboto, Arial, sans-serif; 
        background:#0f1720; color:#e9eef2; -webkit-font-smoothing:antialiased; 
    }
    .page-wrap { min-height:100vh; display:flex; align-items:center; justify-content:center; padding:24px; box-sizing:border-box; }

    .card { width:420px; max-width:96%; border-radius:20px; background: #1C2937; box-shadow: 0 18px 40px rgba(2,8,12,0.6); padding:20px 22px; box-sizing:border-box; }

    .logo-wrap { text-align:center; margin-bottom:24px; }
    .logo-wrap img { display:block; margin:0 auto; max-width:220px; max-height:120px; object-fit:contain; }

    .card-inner { padding:0; }
    .field { margin-bottom:14px; }
    .field label { display:block; font-size:12px; color:#92a0a6; margin-bottom:6px; font-weight:500; }
    .input-wrap { position:relative; }
    .input-wrap input {
        width:100%;
        padding:12px 48px 12px 14px;
        border-radius:10px;
        border:1px solid rgba(255,255,255,0.08);
        background:#2E3A47;
        color:#e9eef2;
        font-size:14px;
        box-sizing:border-box;
        outline:none;
        transition: border-color 0.2s;
    }
    .input-wrap input:focus { border-color: rgba(255,255,255,0.2); }
    .input-wrap input::placeholder { color:#7f9096; }

    .icon {
        position:absolute;
        right:12px;
        top:50%;
        transform:translateY(-50%);
        width:36px;
        height:36px;
        background: rgba(255,255,255,0.05);
        border-radius:8px;
        display:flex;
        align-items:center;
        justify-content:center;
        opacity:0.8;
    }
    .icon svg {
        width: 18px;
        height: 18px;
        fill: rgba(233,238,242,0.6);
    }

    .actions { display:flex; flex-direction:column; gap:12px; margin-top:20px; }
    .btn { width:100%; padding:12px; border-radius:10px; font-size:16px; font-weight:600; display:inline-flex; align-items:center; justify-content:center; cursor:pointer; text-decoration:none; border:none; transition:all 0.2s; }
    .btn.primary { background:#ffffff; color:#0b0b0b; }
    .btn.primary:hover { background:#f0f0f0; }
    .btn.secondary { background:#ffffff; color:#0b0b0b; }
    .btn.secondary:hover { background:#f0f0f0; }
    .sep { color:#8f9ea3; font-weight:600; text-align:center; }

    .field-error { color:#ff6b6b; font-size:12px; margin-top:4px; display:block; }
    .form-errors { margin-top:16px; background:#3d2626; padding:12px; border-radius:8px; color:#ff9999; font-size:13px; }
    .form-errors ul { margin:0; padding-left:20px; }
    .form-errors li { margin:4px 0; }

    h2 { text-align:center; margin:0 0 24px 0; font-size:24px; font-weight:600; }

    @@media (max-width:480px) {
        .card { width:100%; padding:16px; }
        .logo-wrap img { max-width:180px; }
        .btn { padding:10px; font-size:14px; }
    }
</style>

<div class="page-wrap">
    <div class="card">
        <div class="card-inner">
            <div class="logo-wrap">
                <img src="/images/logoh.png" alt="HelpFast" />
            </div>

            <h2>Cadastrar</h2>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="form-errors">
                    <ul>
                        @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@e.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <form asp-action="Register" method="post" novalidate>
                <div class="field">
                    <label>Nome Completo</label>
                    <div class="input-wrap">
                        <input asp-for="Nome" placeholder="Digite seu nome completo" />
                        <span class="icon">
                            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 12c2.761 0 5-2.239 5-5s-2.239-5-5-5-5 2.239-5 5 2.239 5 5 5zm0 2c-3.866 0-7 3.134-7 7 0 .552.448 1 1 1h12c.552 0 1-.448 1-1 0-3.866-3.134-7-7-7z"/>
                            </svg>
                        </span>
                    </div>
                    <span asp-validation-for="Nome" class="field-error"></span>
                </div>

                <div class="field">
                    <label>E-mail</label>
                    <div class="input-wrap">
                        <input asp-for="Email" type="email" placeholder="Digite seu e-mail" />
                        <span class="icon">
                            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                            </svg>
                        </span>
                    </div>
                    <span asp-validation-for="Email" class="field-error"></span>
                </div>

                <div class="field">
                    <label>Telefone</label>
                    <div class="input-wrap">
                        <input asp-for="Telefone" placeholder="(XX)XXXXX-XXXX" />
                        <span class="icon">
                            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
                            </svg>
                        </span>
                    </div>
                    <span asp-validation-for="Telefone" class="field-error"></span>
                </div>

                <div class="field">
                    <label>Senha</label>
                    <div class="input-wrap">
                        <input asp-for="Senha" type="password" placeholder="Digite sua senha" />
                        <span class="icon">
                            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path d="M18 8h-1V6c0-2.76-2.24-5-5-5s-5 2.24-5 5v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.66 1.34-3 3-3s3 1.34 3 3v2z"/>
                            </svg>
                        </span>
                    </div>
                    <span asp-validation-for="Senha" class="field-error"></span>
                </div>

                <div class="field">
                    <label>Confirmar Senha</label>
                    <div class="input-wrap">
                        <input name="ConfirmSenha" type="password" placeholder="Confirme sua senha" />
                        <span class="icon">
                            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                <path d="M18 8h-1V6c0-2.76-2.24-5-5-5s-5 2.24-5 5v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.66 1.34-3 3-3s3 1.34 3 3v2z"/>
                            </svg>
                        </span>
                    </div>
                </div>

                <div class="actions">
                    <button type="submit" class="btn primary">Cadastrar</button>
                    <div class="sep">OU</div>
                    <a class="btn secondary" href="@Url.Action("Login","Account")">Login</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
